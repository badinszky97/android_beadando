<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UjTankolas" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Megjegyzés:"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/editEv" />

    <EditText
        android:id="@+id/ujTankolasFrgMeghegyzes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Megjegyzés"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="Mennyiség:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Időpont:"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/ujTankolasFrgMennyiseg" />

    <EditText
        android:id="@+id/ujTankolasFrgMennyiseg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mennyiség (liter)"
        android:inputType="numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <Button
        android:id="@+id/ujTankolasFrgHozzaad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hozzáadás"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ujTankolasFrgMeghegyzes" />

    <EditText
        android:id="@+id/editEv"
        android:layout_width="55dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="2024"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/editHonap"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="01"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editEv"
        app:layout_constraintStart_toEndOf="@+id/editEv" />

    <EditText
        android:id="@+id/editNap"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="01"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editHonap"
        app:layout_constraintStart_toEndOf="@+id/editHonap" />

    <EditText
        android:id="@+id/editOra"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="12"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editNap"
        app:layout_constraintStart_toEndOf="@+id/editNap" />

    <EditText
        android:id="@+id/editPerc"
        android:layout_width="32dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="00"
        android:inputType="number"
        app:layout_constraintBaseline_toBaselineOf="@+id/editNap"
        app:layout_constraintStart_toEndOf="@+id/editOra" />

</androidx.constraintlayout.widget.ConstraintLayout>